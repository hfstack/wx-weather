/**index.wxss**/
page{
  height: 100%;
  width:100%;
}
.content{
  height: 100%;
  width:100%;
  display:flex;
  flex-direction:column;
  font-family: 微软雅黑, 宋体;
  box-sizing:border-box;
  padding:20rpx 40rpx;
  color: #fff;
  font-size:16px;
  background-image: url('../assets/img/bg.png');
  background-size: cover;
}
.info{
  margin-top:50rpx;
  width:100%;
  height:160px;
  background-color: #000;
  opacity: 0.5;
  box-shadow: 10px 10px 20px rgba(0,0,0,0.5);
}
.temp{
  font-size: 36px;
  line-height: 46px;
  text-align: center;
  padding-top:10px;
}
.weather{
  line-height: 22px;
  margin: 10px 0;
  padding: 0 10px;
}
.prompt{
  padding:0 10px;
}
.city{
  text-align: right;
  margin: 10px;
}
.forecast{
  width: 100%;
  display:flex;
  margin-top:100px;
  align-self:flex-end;
}
.next-day{
  width:20%;
  height:400rpx;
  background-color:#000;
  opacity:.5;
  box-shadow: 10px 10px 30px rgba(0 ,0 ,0, 0.5);
  text-align:center;
  line-height:30px;
  font-size:14px;
  margin: 0 6rpx;
}